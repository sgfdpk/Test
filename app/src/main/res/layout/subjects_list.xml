<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subject_item"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="0dp"
    android:layout_marginBottom="16dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subjects_layout"
        android:paddingBottom="4dp"
        android:background="@android:color/transparent">
        <ImageView
            android:id="@+id/formals_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/formals"/>
        <TextView
            android:id="@+id/subject_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:layout_alignTop="@id/formals_icon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/formals_icon"
            android:layout_toEndOf="@id/formals_icon"
            android:textSize="20dp"
            android:text="Название предмета "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/subject_progress"
            android:layout_marginLeft="134dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/formals_icon"
            android:text="0/100" />
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_alignBottom="@id/formals_icon"
            android:layout_toRightOf="@id/formals_icon"
            android:layout_marginBottom="4dp"
            android:background="@color/cardview_shadow_start_color"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>